// A general grammar for representing a source file
// Every byte in source file should be in a 'Lin'

whitespace = { " " }

characters = {
  !(
    "\n" | "\r\n"
  )
  ~ ANY
}

newline = {
  "\n" | "\r\n"
}

line = { whitespace* ~ characters+ ~ newline{1} }

eofile = { characters* ~ EOI }


file = { SOI ~ (line | eofile)+ }
